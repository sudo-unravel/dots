{
    //GENERAL
    "window.menuBarVisibility": "toggle",

    //workbench
    "workbench.iconTheme": "catppuccin-perfect-macchiato",
    "workbench.editor.showTabs": "single",
    "workbench.colorTheme": "Alt Catppuccin Macchiato",

    //editor
    "editor.minimap.enabled": false,
    "editor.fontFamily": "'Roboto Mono NF','Roboto Mono', monospace",
    "editor.smoothScrolling": true,
    "editor.linkedEditing": true,
    "editor.guides.bracketPairs": true,
    "editor.cursorSurroundingLines": 8,
    "editor.formatOnSave": true,
    "editor.fontSize": 16,
    "editor.lineNumbers": "relative",
    "editor.tabCompletion": "on",
    "editor.acceptSuggestionOnEnter": "off",

    //error lens
    "errorLens.messageMaxChars": 120,
    "errorLens.scrollbarHackEnabled": true,

    //theme
    "alt-catppuccin.accentColor": "peach",
    "alt-catppuccin.extraBordersEnabled": true,
    "alt-catppuccin.syntaxMode": "default",
    "alt-catppuccin.italicKeywords": false,

    //prettier
    "prettier.tabWidth": 4,
    "prettier.quoteProps": "consistent",

    //VIM
    "vim.useSystemClipboard": true,
    "vim.highlightedyank.enable": true,
    "vim.highlightedyank.duration": 180,
    "vim.highlightedyank.color": "rgba(213, 217, 255, 0)",
    "vim.highlightedyank.textColor": "white",
    "vim.normalModeKeyBindingsNonRecursive": [
        {
            "before": ["g", "h"],
            "commands": ["editor.action.showDefinitionPreviewHover"]
        }
    ],

    // APC
    "apc.electron": {
        "visualEffectState": "active"
    },
    "apc.statusBar": {
        "height": 32,
        "fontSize": 12
    },

    //Formatting
    "[python]": {
        "editor.insertSpaces": true,
        "editor.tabSize": 4
    },
    "[html]": {
        "editor.defaultFormatter": "esbenp.prettier-vscode"
    },
    "[typescript]": {
        "editor.defaultFormatter": "esbenp.prettier-vscode"
    },
    "[scss]": {
        "editor.defaultFormatter": "esbenp.prettier-vscode"
    },
    "[jsonc]": {
        "editor.defaultFormatter": "esbenp.prettier-vscode"
    },

    //go
    "go.toolsManagement.autoUpdate": true,
    "go.alternateTools": {
        "go": "~/.local/share/mise/installs/go/1.23.2/bin/go"
    }
}
